<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:background="#E0FFFF"

    >

    <ImageButton
        android:id="@+id/btnClientShowAllRecords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnClientShowAllHistory"
        app:layout_constraintEnd_toStartOf="@+id/btnClientShowClientRecords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timetable_icon" />

    <ImageButton
        android:id="@+id/btnClientShowAllHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="134dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnClientShowAllDoctors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClientShowAllRecords"
        app:srcCompat="@drawable/medical_history_icon" />

    <ImageButton
        android:id="@+id/btnClientShowAllDoctors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="134dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClientShowAllHistory"
        app:layout_constraintTop_toBottomOf="@+id/btnClientShowClientRecords"
        app:srcCompat="@drawable/doctor_icon" />

    <ImageButton
        android:id="@+id/btnClientShowClientRecords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="80dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnClientShowAllDoctors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClientShowAllRecords"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_date_calendar_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>